{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDirs": ["./server", "./public"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
} 